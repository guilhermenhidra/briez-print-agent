{
  "name": "briez-print-agent",
  "version": "1.0.7",
  "description": "Agente de impressão automática para Briez - Sistema de Gestão para Restaurantes",
  "main": "main.js",
  "author": "Briez",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "escpos": "^3.0.0-alpha.6",
    "escpos-network": "^3.0.0-alpha.4",
    "escpos-usb": "^3.0.0-alpha.4",
    "express": "^4.18.2",
    "node-thermal-printer": "^4.4.3",
    "usb": "^2.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.briez.print-agent",
    "productName": "Briez Print Agent",
    "copyright": "Copyright © 2024 Briez",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.github/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "briez-print-agent-setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Briez Print Agent",
      "runAfterFinish": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "guilhermenhidra",
        "repo": "briez-print-agent"
      }
    ]
  }
}
